@model TagViewModel
@{
    ViewData["title"] = "Tags";
}

<erro texto="@TempData["erro"]"></erro>
<mensagem texto="@TempData["msg"]"></mensagem>

<div class="accordion mx-auto w-75">

    <div class="accordion-item">
        <h2 class="accordion-header">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#painelCollapseTags">
                <b>Tags Cadastradas</b>
            </button>
        </h2>
        <div id="painelCollapseTags" class="accordion-collapse collapse show">
            <div class="accordion-body">

                <ul>
                    @foreach (Tag tag in Model.Tags)
                    {
                        <li><a asp-action="Editar" asp-route-id="@tag.TagId">@tag.Nome</a></li>
                    }
                </ul>

            </div>
        </div>
    </div>

    <div class="accordion-item">
        <h2 class="accordion-header">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#painelCollapseCadastrar">
                <b>Cadastrar nova Tag</b>
            </button>
        </h2>
        <div id="painelCollapseCadastrar" class="accordion-collapse collapse">
            <div class="accordion-body">
                <form asp-action="Cadastrar">
                    <div class="d-flex gap-4">
                        <input asp-for="Tag.Nome" class="form-control" placeholder="Nome da Tag" required/>
                        <input type="submit" class="btn btn-primary" value="Cadastrar Tag" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>